<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/sender_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/sender_picture"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/message_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_toEndOf="@id/sender_picture"
        android:layout_alignTop="@id/sender_picture"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_below="@id/message_subject"
        android:layout_alignStart="@id/message_subject"
        android:layout_marginTop="4dp"/>

</RelativeLayout>